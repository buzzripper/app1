{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information",
			"Microsoft.Identity.Web.TokenAcquisition": "Error",
			"Yarp": "Warning"
		},
		"File": {
			"Enabled": true,
			"Path": "logs/portal.log"
		}
	},
	"XXXOTEL_EXPORTER_OTLP_ENDPOINT": "",
	"Cors": {
		"AllowedOrigins": [ "https://localhost:4201" ]
	},
	"ServiceClients": {
		"Auth": {
			"Url": "https://localhost:5002"
		},
		"App1": {
			"Url": "https://localhost:5003"
		}
	},
	"ReverseProxy": {
		"Routes": {
			"auth-api": {
				"ClusterId": "auth-cluster",
				"Match": {
					"Path": "/api/auth/{**catch-all}"
				},
				"Transforms": [
					{
						"PathPattern": "/api/auth/{**catch-all}"
					}
				]
			},
			"app-api": {
				"ClusterId": "app-cluster",
				"Match": {
					"Path": "/api/app/{**catch-all}"
				},
				"Transforms": [
					{
						"PathPattern": "/api/app/{**catch-all}"
					}
				]
			}
		},
		"Clusters": {
			"auth-cluster": {
				"Destinations": {
					"auth-destination": {
						"Address": "https+http://auth-server"
					}
				}
			},
			"app-cluster": {
				"Destinations": {
					"app-destination": {
						"Address": "https+http://app-server"
					}
				}
			}
		}
	}
}
